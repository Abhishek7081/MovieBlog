<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=movie.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/movies/<%=movie._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Movie Name</label>
                    <input class="form-control" type="text" name="movie[name]" value="<%=movie.name%>" id="name">
                </div>
                <div class="form-group">
                    <label>Genre
                        <input class="form-control" list="genre" type="text" name="movie[genre]" value="<%=movie.genre%>"></label>
                    <datalist id="genre">
                        <option value="Sci-fi">
                        <option value="Action">
                        <option value="Romantic">
                        <option value="Mystery">
                        <option value="Drama">
                        <option value="Fanatsy">
                    </datalist>
                </div>
                <div class="form-group">
                    <label for="image">Movie Poster Url</label>
                    <input class="form-control" type="text" name="movie[image]" value="<%=movie.image%>" id="image">
                </div>
                <div class="form-group">
                    <label for="link">Download Link</label>
                    <input class="form-control" type="text" name="movie[link]" value="<%=movie.link%>"id="link">
                </div>
                <div class="form-group">
                    <label for="desc">Description(<em>You can also write using html tag.</em>)</label>
                    <input class="form-control" type="text" name="movie[description]" value="<%=movie.description%>"id="desc">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

